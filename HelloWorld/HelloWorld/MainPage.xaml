<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
         
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout x:Name="stkMain" Orientation="Vertical">
        <Frame 
            BackgroundColor="#aaeeaa" 
            Padding="24"  
            BorderColor="Black"
            
            >
            <Frame.CornerRadius>
                <OnPlatform x:TypeArguments="x:Single">
                    <On Platform="UWP" Value="30"></On>
                    <On Platform="Android" Value="5"></On>
                </OnPlatform>
                
            </Frame.CornerRadius>
            <Label FontAttributes="Bold" Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Grid HeightRequest="150">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Entry x:Name="txtName" Grid.Column="0"></Entry>
            <Button x:Name="btnSave" Grid.Column="1" Text="Toevoegen" 
                    Clicked="BtnSave_Clicked"
                    ></Button>
        </Grid>

        <Grid HeightRequest="150">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <Button x:Name="btnYes" Text="Ja" Grid.Column="0"
                    Clicked="BtnYes_Clicked" Style="{StaticResource btnPrimary}"></Button>
            <Button x:Name="btnNo" Text="Nee" Grid.Column="1"
                    Clicked="BtnNo_Clicked"
                    ></Button>
        </Grid>

        <ListView x:Name="lstAnswers">
            
        </ListView>
        <Button Text="Go to issue nr 123" x:Name="btnGoToIssue" Clicked="BtnGoToIssue_Clicked"></Button>
        <!--<Button Text="Go to rotationPage" x:Name="btnGoToRotationPage" Clicked="BtnGoToRotation_Clicked"></Button>-->
    </StackLayout>

</ContentPage>
